            {% if event.featured == true %}
                <img src="/assets/img/static/arrow.svg"/> {% if event.url %}<a href="{{event.url}}" target="_blank">{% endif %}<strong>{{ event.name }}</strong>{% if event.url %}</a>{% endif %}<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ event.date }} {{ event.city }}<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ event.time }}<br>
            {% endif %}
        {% endfor %}
{% endif %}
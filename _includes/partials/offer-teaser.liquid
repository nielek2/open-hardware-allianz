<div class="teaser lab-teaser col-xs-24 col-md-24">
    <div class="teaser-inner">
        {% assign base_dir = page.url | split:'/'  %}
        {% assign base_dir = base_dir  %}
        <div class="teaser-content lab-teaser-content">
            {% if include.src %}
                <div class="teaser-image col-xs-24  col-md-6">
                    <img class="img-responsive" src="{{ site.baseurl }}{{ include.src }}"/>
                </div>
            {% endif %}
            <div class="col-xs-24  col-md-18">
                <h3 class="teaser-headline">{{ include.name }}</h3>
                {% if (base_dir[1] == "en") %}
                     <p class="teaser-copy">{{ include.copy_en }}{% if include.events %}{% include {{ include.events }} %}{% endif %}</p>

                {% else %}
                     <p class="teaser-copy">{{ include.copy }}{% if include.events %}{% include {{ include.events }} %}{% endif %}</p>
                {% endif %}

            </div>
        </div>

    </div>
</div>
